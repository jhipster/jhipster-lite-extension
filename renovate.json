{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "npm:unpublishSafe",
    "schedule:daily",
    ":maintainLockFilesWeekly",
    ":disableDependencyDashboard",
    ":automergeMinor",
    ":automergePr",
    ":automergeRequireAllStatusChecks",
    ":label(area: dependencies)"
  ],
  "prHourlyLimit": 20,
  "docker-compose": {
    "fileMatch": [
      "^src/main/docker/[^/]*\\.ya?ml$"
    ]
  }
}
